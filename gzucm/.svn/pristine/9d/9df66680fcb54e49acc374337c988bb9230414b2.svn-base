body{
	margin:0;
	padding:0;
    background: #e7eaeb;
	font-family:"微软雅黑";
}

.header{
	position:fixed;
	height:55px;
	line-height:55px;
	background:#0b7ac0;
	width:100%;
	z-index:999;
}
a{
	text-decoration:none;
}
.nav{
	float:left;
}
.nav_itme{
	float:left;
	text-decoration:none;
    padding: 0 30px;
    line-height: 55px;
    color: #fff;
    font-size: 15px;
    float: left;
}
.nav_itme:hover, .nav_selected{
    background: #094371;
}
.logo{
	float:left;
	width:220px;
	text-align:center;
}
._menu{
	position:fixed;
	margin-top:70px;
	width:220px;
	height:100%;
	color:#0b7ac0;
    background: #f4f4f4;
}
._menu ul{
	margin:0;
	padding:0;
}
._menu li{
	margin:0;
	padding:0;
	list-style-type:none;
}
._menu a{
	height:45px;
	line-height:45px;
	display:block;
	color: #6b6b6b;
	text-decoration:none;
    font-weight: bold;
	font-size: 14px;
	text-indent: 0.5em;
}
._menu a{
	padding-left:30px;
}
._menu ul > a{
	height:55px;
	line-height:55px;
}
._menu li{
	display:none;
}
._menu li a{
	padding-left:50px;
}
a.menu_selected{
    background: #456a8c;
    color: #adceec;
}
a.second_menu_selected{
	background: #444;
	color:#eee;
}
.tp_plus{
	background: url(../Images/tp_plus.png) no-repeat 93% 50%;
}
a.tp_plus_select{
	background:#456a8c url(../Images/tp_plus.png) no-repeat 93% 50%;
	color: #adceec;
}
a.tp_minus{
	color: #adceec;
	background:#456a8c url(../Images/tp_minus.png) no-repeat 93% 50%;
}
.tp_minus_li{
	background: #ddd;
}
.logout{
	float:right;
	margin-right:10px;
}
.logout a{
	text-decoration:none;
	color:#eee;
}
.main{
	color:#000;padding-top:65px;padding-left:230px;
	padding-right: 10px;
}

.table{
	width:100%;
	border-collapse: collapse;
	font-family:"宋体";
	font-size:13px;
}
.table th{
	text-align:left;
	border-bottom:3px solid #ddd;
}
.table td{
	border-bottom:1px solid #ddd;
	color:#535353;
}
.table tbody tr:nth-child(even)  {
    background-color: #EEE;
}
.table tbody tr:hover{
	background:#daf0fa;
}
.table tr th:first-child,.table tr td:first-child{
	padding-left:15px;
}
.table_action{
	width:100px;
}
.table th, .table td{
	height:40px;
	line-height:40px;
	padding-left:5px;
}
.table .second{
	padding-left:30px;
}
.table .third{
	padding-left:60px;
}
.table input[type=text]{
	width:30px;
}
.toggle{
	padding-left:10px
}
.toggle2{
	padding-left:25px
}
.main td img{
	cursor:pointer;
}

.header_action{
	height:40px;
	line-height:40px;
	padding-left:10px;
	background:#fefefe;
	margin-bottom:2px;
}
.header_action span{
	font-size:20px;
	color:#616f77;
}
.header_action div{
	padding-right:15px;
	float:right;
}
.main_content{
	padding:5px;
	background:#fefefe;
	min-height:600px;
}
.details{
    margin-top:5px;
	margin-bottom:10px;
}
.details h3{
    background: url(../Images/icon_room.png) no-repeat #f4f4f4 12px 8px;
    margin: 0 0 5px 0;
    color: #7f88a3;
	font-size:"宋体";
    font-size: 12px;
    height: 35px;
    line-height: 35px;
    text-indent: 3.5em;
}
.header_seach{
	height:50px;
	line-height:50px;
	background:#f8f8f8;
	padding-left:13px;
	font-size:12px;
	color:#8e8e8e;
}
