<include file="Public/base"/>


<div class='main'>

	<div class="details">
	    <h3>通知公告</h3>
	</div>

	<div class='header_action'>
		<span>通知公告列表</span>
		<div>
			<a href='{:U("add")}' class='modal'>发布</a>
		</div>
	</div>
	
	<div class='main_content'>
		<div class='header_seach'>
			标题：<input type='text'>
			点击率：<select>
						<option>ID降序</option>
						<option>ID升序</option>
						<option>日点击降</option>
						<option>周点击降</option>
						<option>月点击降</option>
						<option>总点击降</option>
					</select>
			<input type="button" value="查询">
		</div>
		
		<table class='table'>
			<thead>
				<tr>
					<th>ID</th>
					<th>标题</th>
					<th>固定级别</th>
					<th>点击</th>
					<th>类型</th>
					<th>状态</th>
					<th>发布时间</th>
					<th class='table_action'>操作</th>
				</tr>
			</thead>
			<tbody>
				
					<tr>
						<td>1048</td>
						<td>{$user.role}</td>
						<td>
							<a href="{:U('edit',array(uid=>$user[uid]))}" class="modal">编辑</a>
							<a href="{:U('del',array('uid'=>$user[uid]))}" class='ask_del'>删除</a>
						</td>
					</tr>
			</tbody>
		</table>
		
	</div>
</div>

